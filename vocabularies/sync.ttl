@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix sync: <https://kkalass.github.io/solid_crdt_sync/vocab/sync#> .

# --- Ontology Definition ---

<https://kkalass.github.io/solid_crdt_sync/vocab/sync> a owl:Ontology;
    rdfs:label "CRDT Synchronization Framework";
    rdfs:comment "Core synchronization vocabulary for the CRDT sync framework infrastructure." .

# --- Class Definitions ---

sync:ManagedDocument a rdfs:Class;
    rdfs:label "Managed Document";
    rdfs:comment "A document that is managed by the CRDT sync framework, containing framework metadata and a primary resource topic.";
    rdfs:subClassOf <http://xmlns.com/foaf/0.1/Document> .

# --- Property Definitions ---

sync:isGovernedBy a rdf:Property;
    rdfs:label "is governed by";
    rdfs:comment "Links a data or index resource to the public rules file that defines its merge behavior.";
    rdfs:domain rdfs:Resource;
    rdfs:range rdfs:Resource . # The IRI of the mapping file

sync:managedResourceType a rdf:Property;
    rdfs:label "managed resource type";
    rdfs:comment "Links a Type Index registration for sync:ManagedDocument to the semantic RDF class of the resources being managed (e.g., schema:Recipe). This property is used within solid:TypeRegistration entries where solid:forClass is sync:ManagedDocument. Framework-aware applications can filter by sync:managedResourceType to discover containers holding specific semantic types (like recipes or tasks), while non-framework applications will ignore the CRDT-managed resources since they only see the sync:ManagedDocument wrapper type.";
    rdfs:domain <http://www.w3.org/ns/solid/terms#TypeRegistration>;
    rdfs:range rdfs:Class .
